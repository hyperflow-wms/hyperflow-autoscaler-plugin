{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/../source/bin/hflow",
      "args": [
        "run",
        "${workspaceFolder}/assets/wf_example",
        "-p", "${workspaceFolder}/dist/main.js",
      ],
      "env": {
        "HF_VAR_function": "k8sCommand",
        "HF_VAR_autoscalerProvider": "dummy"
      },
      "preLaunchTask": "compileAutoscaler",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outputCapture": "std",
      "stopOnEntry": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Plan",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/workflow/plan.ts",
      "args": [],
      "env": {},
      "preLaunchTask": "compileAutoscaler",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outputCapture": "std"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "-r",
          "ts-node/register",
          "--timeout",
          "999999",
          "--colors",
          "${workspaceFolder}/src/**/*-spec.ts",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
    }
  ]
}
